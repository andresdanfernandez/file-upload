# Use a smaller Node.js image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies with memory optimizations
RUN npm ci --only=production --no-audit --no-fund --prefer-offline

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Install a lightweight server
RUN npm install -g http-server

# Expose port
EXPOSE 8080

# Start the server
CMD ["http-server", "dist", "-p", "8080", "-a", "0.0.0.0"] 